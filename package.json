{
  "name": "@abraham-agung/dispatch",
  "version": "0.1.0",
  "description": "A lightweight TypeScript state machine library inspired by XState. Provides predictable state management with event-driven transitions and validation.",
  "type": "module",
  "keywords": [
    "state-machine",
    "state-management",
    "xstate",
    "typescript",
    "events",
    "transitions",
    "immer",
    "react",
    "state",
    "manager",
    "management",
    "redux",
    "store"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:rolldown && npm run build:types",
    "build:rolldown": "rolldown -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:base": "rolldown -c",
    "test": "vitest",
    "prepublishOnly": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/padunk/dispatch.git"
  },
  "author": "Abraham Agung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/padunk/dispatch/issues"
  },
  "homepage": "https://github.com/padunk/dispatch#readme",
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=22.20.0"
  },
  "peerDependencies": {
    "immer": "^11.0.0"
  },
  "devDependencies": {
    "immer": "^11.0.1",
    "react": "^19.2.3",
    "rolldown": "^1.0.0-beta.58",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "zod": "^4.1.13"
  }
}
