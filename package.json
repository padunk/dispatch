{
  "name": "@rustyrush/dispatch",
  "version": "0.0.7",
  "description": "A lightweight TypeScript state machine library inspired by XState. Provides predictable state management with event-driven transitions and validation.",
  "type": "module",
  "keywords": [
    "state-machine",
    "state-management",
    "xstate",
    "react",
    "state",
    "manager",
    "management",
    "redux",
    "store"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:base && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:base": "rolldown -c",
    "test": "bun run test:format && bun run test:types && bun run test:lint && bun run test:spec",
    "test:format": "prettier . --list-different",
    "test:types": "tsc --noEmit",
    "test:lint": "eslint .",
    "test:spec": "vitest run",
    "prepublishOnly": "bun run build && bun test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/padunk/dispatch.git"
  },
  "author": "Abraham Agung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/padunk/dispatch/issues"
  },
  "homepage": "https://github.com/padunk/dispatch#readme",
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=22.20.0"
  },
  "peerDependencies": {
    "@types/react": ">=19.0.0",
    "react": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "immer": "^11.1.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.7",
    "@types/use-sync-external-store": "^1.5.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.6.5",
    "@vitest/ui": "^4.0.16",
    "eslint": "9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-testing-library": "^7.15.4",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "rolldown": "^1.0.0-beta.58",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "directories": {
    "example": "examples"
  }
}